<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  


  <div class="container px-1">
    <div class="alert alert-warning">
      <h5 class="text-center">Editing account details</h5>
    </div>
  </div>


  <div class="card container shadow-sm px-0 d-flex", style="max-width:500px">
    
    <div class="card-header text-center"><h5><strong>Current User:</strong></h5></div>
    <div class="card-body">
      <div class="field input-group pr-5", style="justify-content:right;">
        <div class="input-group-prepend">
          <span class="input-group-text">Email: </span>
        </div>   
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form control" %>
      </div>

      
    </div>
    <div class="card-body">
      <div class="field input-group pr-5", style="justify-content:right;">
        <div class="input-group-prepend">
          <span class="input-group-text">Password: </span>
        </div> 
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <p class="text-center pt-1 pb-0"><em>Leave blank if you do not want to change it.</em></p>
    </div>
    <div class="card-body">
      <div class="field input-group pr-5", style="justify-content:right;">
        <div class="input-group-prepend">
          <span class="input-group-text">Password Confirm: </span>
        </div> 
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="card-body">
      <div class="field input-group pr-5", style="justify-content:right;">
        <div class="input-group-prepend">
          <span class="input-group-text">Current Password: </span>
        </div> 
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <p class="text-center pt-1 pb-0"><em>Current password required to confirm changes.</em></p>
    </div>
    <div class="container pt-5 pb-4 justify-content-center">
      <%= f.submit "Update", class: 'btn btn-primary btn-block '%>
      <%= link_to "Cancel", projects_path, class: "btn btn-outline-primary btn-block", type: "submit", role: "button"%>
    </div>
    
    <%end%>

    <div class="card-header text-center"><h5><strong>Account Deletion:</strong></h5></div>  
      <div class="card-body">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger btn-block" %>
      </div>
    </div>
  </div>


