  <div class = "mx-auto pt-2">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="container px-1">
      <div class="alert alert-success">
        <h5 class="text-center">New account</h5>
      </div>
    </div>

    
    <div class="card container shadow-sm px-0 d-flex", style="max-width:500px">
      
      <div class="card-header text-center"><h5><strong>Sign Up:</strong></h5></div>
      <div class="card-body">
        <div class="field input-group pr-5", style="justify-content:right;">
          <div class="input-group-prepend">
            <span class="input-group-text">Email: </span>
          </div>   
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form control" %>
        </div>

        
      </div>
      <div class="card-body">
        <div class="field input-group pr-5", style="justify-content:right;">
          <div class="input-group-prepend">
            <span class="input-group-text">Password: </span>
          </div> 
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="card-body">
        <div class="field input-group pr-5", style="justify-content:right;">
          <div class="input-group-prepend">
            <span class="input-group-text">Password Confirm: </span>
          </div> 
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="container pt-5 justify-content-center">
        <%= f.submit "Sign Up", class: 'btn btn-success btn-block '%>
        <%= link_to "Cancel", projects_path, class: "btn btn-outline-primary btn-block", type: "submit", role: "button"%>
        <%= render "devise/shared/links" %>
      </div>
    </div>


  <% end %>


</div>