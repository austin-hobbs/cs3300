<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="container px-1">
    <div class="alert alert-primary">
      <h5 class="text-center">Current user</h5>
    </div>
  </div>


  <div class="card container shadow-sm px-0 d-flex", style="max-width:500px">
    
    <div class="card-header text-center"><h5><strong>Log in:</strong></h5></div>
    <div class="card-body">
      <div class="field input-group pr-5", style="justify-content:right;">
        <div class="input-group-prepend">
          <span class="input-group-text">Email: </span>
        </div>   
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form control" %>
      </div>

      
    </div>
    <div class="card-body">
      <div class="field input-group pr-5", style="justify-content:right;">
        <div class="input-group-prepend">
          <span class="input-group-text">Password: </span>
        </div> 
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    
    <% if devise_mapping.rememberable? %>
      <div class="field mx-auto">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="container pt-3 pb-3 justify-content-center">
      <%= f.submit "Login", class: 'btn btn-primary btn-block '%>
      <%= link_to "Cancel", projects_path, class: "btn btn-outline-primary btn-block", type: "submit", role: "button"%>
      <%= render "devise/shared/links" %>
    </div>
  </div>



<% end %>



