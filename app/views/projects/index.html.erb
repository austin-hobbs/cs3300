<main role="main" class="flex-shrink-0">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="">
    <div class="container">
     
      <h1 class="display-3 pt-3">Projects</h1>
      <p class="pb-3">Welcome to my projects website. Below is a list of all the current projects!</p>
      <% if user_signed_in? %>
        <%= link_to 'Create Project', new_project_path, class:"btn btn-success btn-lg", role:"button", align: "right" %>
      <% end %>
    </div>
  </div>


  <div class="album py-5">
    <div class="container">
      <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm", style="height:300px">
            <h4 class="card-header bg-secondary text-white", style="height:80px; transform: rotate(0);", role="button" %>
              <%= link_to project.title, project, class:"text-white stretched-link" %>
            </h4>
            <div class="card-body">
              <div class="d-flex container overflow-hidden text-dark text-decoration-none align-middle", style="height:75%">
                <%= project.description %>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group pt-3">
                  <% if user_signed_in? %>
                    <p><%= link_to 'Edit', edit_project_path(project), class: "btn btn-sm btn-outline-secondary", role: "button" %>
                  <% end %>
                </div>
                <small class="text-muted"><%=project.updated_at.strftime("%D") %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>  
    </div>
  </div>

    

